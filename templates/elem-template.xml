<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../schema/tagLibrary_elementDesc.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<div type="elementDocumentation" xml:id="elementName"  xmlns="http://www.tei-c.org/ns/1.0">
   <!-- @type is always elementDocumentation 
      @xml:id is the name of the element-->
   <head>
      <gi>name as in XML</gi>
   </head>
   <div type="fullName">
      <p xml:lang="en">Fullname</p>
   </div>
   <div type="summary">
      <p xml:lang="en">Summary</p>
   </div>
   <div type="description">
      <p xml:lang="en">Description you can use <gi>to get anglebrackets</gi></p>
      <p>You can create an bullitpoint list using the list shown below the label needs to be here 
         for validation but gets ignored in the transformation</p>
      <p>
         <list type="bulleted">
            <label>1</label>
            <item>Text for bullet 1</item>
            <label>2</label>
            <item>Text for bullet 2</item>
         </list>
      </p>
   </div>
   <div type="mayContain">
      <p>Can contain for example [text] or elementA</p>
   </div>
   <div type="mayOccurWithin">
      <p>In which elements?</p>
   </div>
   <div type="attributes">
      <p xml:lang="en">
         <list type="gloss">
            <!-- Repeatable -->
            <label>Attribute name</label>
            <item>Occurances</item>
         </list>
      </p>
   </div>
   <div type="reference">
      <p>Reference to standard paragraph</p>
   </div>
   <div type="occurrence">
      <!-- If there are no variations just one of each -->
      <div type="mandatory">
      <!-- Mandatory or Optional as values -->
      <p>Mandatory</p>
   </div>
   <div type="repeatable">
      <!-- Repeatable or Non-repeatable as values -->
      <p>Repeatable</p>
   </div>
      <!-- If there are variations extra divs are present -->
      <div type="occurenceSpecifikation" n="1">
         <head>In which element or where is this variation used</head>
         <div type="mandatory">
            <!-- Mandatory or Optional as values -->
            <p>Mandatory</p>
         </div>
         <div type="repeatable">
            <!-- Repeatable or Non-repeatable as values -->
            <p>Repeatable</p>
         </div>
      </div>
      <div type="occurenceSpecifikation" n="2">
         <head>In which element or where is this variation used</head>
         <div type="mandatory">
            <!-- Mandatory or Optional as values -->
            <p>Mandatory</p>
         </div>
         <div type="repeatable">
            <!-- Repeatable or Non-repeatable as values -->
            <p>Repeatable</p>
         </div>
      </div>
   </div>
   
   <div type="examples">
      <egXML xmlns="http://www.tei-c.org/ns/Examples">
         <!-- Area for creating examples. Each starting element need to have the xmlns: attribute
              and after that just add all example XML-->
         <!-- Exampele for demonstration from EAC-CPF -->
         <eac-cpf:maintenanceEvent xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:eventType>created</eac-cpf:eventType>
            <eac-cpf:eventDateTime>1993-10-20</eac-cpf:eventDateTime>
            <eac-cpf:agentType>human</eac-cpf:agentType>
            <eac-cpf:agent>McCarthy, G.J.</eac-cpf:agent>
         </eac-cpf:maintenanceEvent>
         <eac-cpf:maintenanceEvent xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:eventType>revised</eac-cpf:eventType>
            <eac-cpf:eventDateTime>2006-08-01</eac-cpf:eventDateTime>
            <eac-cpf:agentType>machine</eac-cpf:agentType>
            <eac-cpf:agent>BSConverta</eac-cpf:agent>
         </eac-cpf:maintenanceEvent>
      </egXML>
   </div>
</div>
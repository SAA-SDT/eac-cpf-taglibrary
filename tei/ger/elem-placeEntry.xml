            <eac-cpf:placeRole>Birthplace</eac-cpf:placeRole>
            <eac-cpf:placeEntry latitude="59.37541" longitude="17.03371"
               >Strängnäs</eac-cpf:placeEntry>
         </eac-cpf:place>
         <eac-cpf:place xmlns:eac-cpf="urn:isbn:1-931666-33-4">

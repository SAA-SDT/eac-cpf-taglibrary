<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../schema/tagLibrary_elementDesc.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?><div xmlns="http://www.tei-c.org/ns/1.0"
     xml:id="event"
     type="elementDocumentation">
   <head>
      <gi>event</gi>
   </head>
   <div type="fullName">
      <p xml:lang="eng">Event</p>
      
   </div>
   <div type="summary">
      <p xml:lang="eng">An element used to encode an event associated with a date and, optionally, a
							place within a structured chronology.</p>
      
   </div>
   <div type="description" xml:lang="eng">
      <p>The element contains discursive text identifying the event described by the
									<gi>chronItem</gi>. Every <gi>event</gi> must have an associated <gi>date</gi>
								element, and it may also have an optional <gi>placeEntry</gi> element.</p>
   </div>
   
   <div type="mayContain">
      <p>[text]</p>
   </div>
   <div type="mayOccurWithin">
      <p>chronItem</p>
   </div>
   <div type="attributes">
      <p xml:lang="eng">
         <list type="gloss">
            <label>localType</label>
            <item>Optional</item>
            <label>xml:id</label>
            <item>Optional</item>
            <label>xml:lang</label>
            <item>Optional</item>
         </list>
      </p>
      
   </div>
   <div type="occurrence">
      <div type="mandatory">
         <p xml:lang="eng">Mandatory</p>
      </div>
      <div type="repeatable">
         <p xml:lang="eng">Non-repeatable</p>
      </div>
   </div>
   <div type="examples">
      <egXML xml:lang="eng" xmlns="http://www.tei-c.org/ns/Examples">
         <eac-cpf:chronList xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:chronItem>
               <eac-cpf:dateRange>
                  <eac-cpf:fromDate standardDate="1944">1944</eac-cpf:fromDate>
                  <eac-cpf:toDate standardDate="1947">1947</eac-cpf:toDate>
               </eac-cpf:dateRange>
               <eac-cpf:event>Summer employment at Minnesota Valley Canning Co.</eac-cpf:event>
               <eac-cpf:placeEntry>Blue Earth (Minn.)</eac-cpf:placeEntry>
            </eac-cpf:chronItem>
            <eac-cpf:chronItem>
               <eac-cpf:dateRange>
                  <eac-cpf:fromDate standardDate="1946">1946</eac-cpf:fromDate>
                  <eac-cpf:toDate standardDate="1948">1948</eac-cpf:toDate>
               </eac-cpf:dateRange>
               <eac-cpf:event>Macalester College</eac-cpf:event>
               <eac-cpf:placeEntry>St. Paul (Minn.)</eac-cpf:placeEntry>
            </eac-cpf:chronItem>
            <eac-cpf:chronItem>
               <eac-cpf:date standardDate="1948">1948</eac-cpf:date>
               <eac-cpf:event>Campaign Manager, 2nd District, State Democratic-Farmer-Labor Central
											Committee. Report to Orville Freeman.</eac-cpf:event>
            </eac-cpf:chronItem>
         </eac-cpf:chronList>
      </egXML>
    </div>
</div>

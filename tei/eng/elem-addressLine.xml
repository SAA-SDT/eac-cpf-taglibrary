<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../schema/tagLibrary_elementDesc.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?><div xmlns="http://www.tei-c.org/ns/1.0"
     xml:id="addressLine"
     type="elementDocumentation">
   <head>
      <gi>addressLine</gi>
   </head>
   <div type="fullName">
      <p xml:lang="eng">Address Line</p>
      
   </div>
   <div type="summary">
      <p xml:lang="eng">One line of a postal or other address</p>
      
   </div>
   <div type="description" xml:lang="eng">
      <p>A required element in <gi>address</gi>, the <gi>addressLine</gi> element is used to encode
         one line of a postal or other address. <gi>addressLine</gi> may be repeated afor each line of the address.</p>
   </div>
   
   <div type="mayContain">
      <p>[text]</p>
   </div>
   <div type="mayOccurWithin">
      <p>address</p>
   </div>
   <div type="attributes">
      <p xml:lang="eng">
         <list type="gloss">
            <label>localType</label>
            <item>Optional</item>
            <label>xml:id</label>
            <item>Optional</item>
            <label>xml:lang</label>
            <item>Optional</item>
         </list>
      </p>
      
   </div>
   <div type="reference">
      <p>ISAAR (CPF) </p>
   </div>
  
   <div type="occurrence">
       <div type="mandatory">
      <p xml:lang="eng">Mandatory</p>
   </div>
   <div type="repeatable">
      <p xml:lang="eng">Repeatable</p>
   </div>
   </div>
   <div type="examples">
      <egXML xml:lang="eng" xmlns="http://www.tei-c.org/ns/Examples">
         <eac-cpf:place xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:placeRole>siege social</eac-cpf:placeRole>
            <eac-cpf:address>
               <eac-cpf:addressLine localType="voie">2 rue Corneille</eac-cpf:addressLine>
               <eac-cpf:addressLine localType="city">Paris</eac-cpf:addressLine>
               <eac-cpf:addressLine localType="postalcode">75006</eac-cpf:addressLine>
               <eac-cpf:addressLine>France</eac-cpf:addressLine>
            </eac-cpf:address>
         </eac-cpf:place>
      </egXML>
      <egXML xml:lang="eng" xmlns="http://www.tei-c.org/ns/Examples">
         <eac-cpf:place xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:placeRole>headquarters</eac-cpf:placeRole>
            <eac-cpf:address>
               <eac-cpf:addressLine>221 Kifissias Avenue</eac-cpf:addressLine>
               <eac-cpf:addressLine>Marousi</eac-cpf:addressLine>
               <eac-cpf:addressLine>15124</eac-cpf:addressLine>
               <eac-cpf:addressLine>Greece</eac-cpf:addressLine>
            </eac-cpf:address>
         </eac-cpf:place>
      </egXML> 
   </div>
</div>

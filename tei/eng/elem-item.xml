<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../schema/tagLibrary_elementDesc.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?><div xmlns="http://www.tei-c.org/ns/1.0"
     xml:id="item"
     type="elementDocumentation">
   <head>
      <gi>item</gi>
   </head>
   <div type="fullName">
      <p xml:lang="eng">Item</p>
      
   </div>
   <div type="summary">
      <p xml:lang="eng">A formatting element that encodes the individual entries in a <gi>list</gi>.</p>
      
   </div>
   <div type="description" xml:lang="eng">
      <p>The <gi>item</gi> element is used for general lists within descriptive elements and
								within levels in an outline. Do not confuse with <gi>chronItem</gi>, which encodes entries
								within a structured chronology, <gi>chronList</gi>.</p>
   </div>
   
   <div type="mayContain">
      <p>[text], span</p>
   </div>
   <div type="mayOccurWithin">
      <p>level, list</p>
   </div>
   <div type="attributes">
      <p xml:lang="eng">
         <list type="gloss">
            <label>localType</label>
            <item>Optional</item>
            <label>xml:id</label>
            <item>Optional</item>
            <label>xml:lang</label>
            <item>Optional</item>
         </list>
      </p>
      
   </div>
   <div type="occurrence">
      <div type="occurenceSpecifikation" n="1">
         <head>Within level:</head>
         <div type="mandatory">
            <p>Mandatory</p>
         </div>
         <div type="repeatable">
            <p>Non-repeatable</p>
         </div>
      </div>
      <div type="occurenceSpecifikation" n="2">
         <head>Within list:</head>
         <div type="mandatory">
            <p>Mandatory</p>
         </div>
         <div type="repeatable">
            <p>Repeatable</p>
         </div>
      </div>
   </div>
   <div type="examples">
      <egXML xml:lang="eng" xmlns="http://www.tei-c.org/ns/Examples">
         <eac-cpf:list xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">1450-1950</eac-cpf:span>
										(1929)</eac-cpf:item>
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">Globe Gliding</eac-cpf:span>
										(1930)</eac-cpf:item>
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">Gems</eac-cpf:span> (1931) </eac-cpf:item>
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">Words</eac-cpf:span>
										(1931)</eac-cpf:item>
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">Demonics</eac-cpf:span> (1931)</eac-cpf:item>
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">Can We Co-operate</eac-cpf:span>
										(1942)</eac-cpf:item>
            <eac-cpf:item>
               <eac-cpf:span style="font-style:italic">Amazing Amazon</eac-cpf:span> (1942)
									</eac-cpf:item>
         </eac-cpf:list>
      </egXML>
         <egXML xml:lang="eng" xmlns="http://www.tei-c.org/ns/Examples">
         <eac-cpf:outline xmlns:eac-cpf="urn:isbn:1-931666-33-4">
            <eac-cpf:level>
               <eac-cpf:item>I.</eac-cpf:item>
            </eac-cpf:level>
            <eac-cpf:level>
               <eac-cpf:item>II.</eac-cpf:item>
               <eac-cpf:level>
                  <eac-cpf:item>A.</eac-cpf:item>
               </eac-cpf:level>
               <eac-cpf:level>
                  <eac-cpf:item>B.</eac-cpf:item>
                  <eac-cpf:level>
                     <eac-cpf:item>1.</eac-cpf:item>
                  </eac-cpf:level>
                  <eac-cpf:level>
                     <eac-cpf:item>2.</eac-cpf:item>
                  </eac-cpf:level>
               </eac-cpf:level>
            </eac-cpf:level>
         </eac-cpf:outline>
      </egXML>
   </div>
</div>
